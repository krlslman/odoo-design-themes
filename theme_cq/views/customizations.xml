<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ==== Call_to_action | rounded ===== -->
    <template id="theme_cq.header_call_to_action" inherit_id="website.header_call_to_action"
              name="CQ Header Call to Action" active="True">
        <xpath expr="." position="replace">
            <div t-attf-class="oe_structure oe_structure_solo #{_div_classes}">
                <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
                    <div class="container">
                        <a href="/contactus" class="btn btn-secondary rounded-circle btn_cta">Contact Us
                        </a>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

    <template id="theme_cq.footer_call_to_action" inherit_id="theme_cq.header_call_to_action"
              name="CQ Header Call to Action" active="True">
        <xpath expr="." position="replace">
            <div t-attf-class="oe_structure oe_structure_solo #{_div_classes}">
                <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
                    <div class="container">
                        <a href="/contactus" class="btn btn-primary rounded-circle btn_cta">Contact Us
                        </a>
                    </div>
                </section>
            </div>
        </xpath>
    </template>

    <template id="theme_cq.s_social_media" inherit_id="website.s_social_media" name="Social Media" active="True">
        <xpath expr="." position="replace">
            <div class="s_social_media o_not_editable" contenteditable="false">
                <h4 class="s_social_media_title d-none" contenteditable="true">Social Media</h4>
                <a href="/website/social/facebook" class="s_social_media_facebook" target="_blank">
                    <i class="fa fa-facebook"/>
                    <!--                    t-attf-class="#{koral}"-->
                </a>
                <a href="/website/social/twitter" class="s_social_media_twitter" target="_blank">
                    <i class="fa fa-twitter" style=""/>
                </a>
                <a href="/website/social/linkedin" class="s_social_media_linkedin" target="_blank">
                    <i class="fa fa-linkedin"/>
                </a>
                <!--                <a href="/website/social/youtube" class="s_social_media_youtube" target="_blank">-->
                <!--                    <i class="fa fa-youtube"/>-->
                <!--                </a>-->
                <a href="/website/social/instagram" class="s_social_media_instagram" target="_blank">
                    <i class="fa fa-instagram"/>
                </a>
                <!--                <a href="/website/social/github" class="s_social_media_github" target="_blank">-->
                <!--                    <i class="fa fa-github"/>-->
                <!--                </a>-->
            </div>
        </xpath>
    </template>


</odoo>
